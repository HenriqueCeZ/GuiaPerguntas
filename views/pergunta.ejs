
<%- include('./partiels/header.ejs');%>
<body>
    

<%- include('./partiels/navbar.ejs');%>

    <div class="container">
            <div class="card">
                <div class="card-header desc-titulo">
                    <h1><%=pergunta.titulo%></h1>
                </div>
                <div class="card-body desc-pergunta">
                    <p><%=pergunta.descricao%></p>

                </div>
            </div>
            <hr>

            <h3>Resposta:</h3>
            
   
            <form method="POST" class="form-control area" action="/responder">
                
                  <textarea class="desc-resposta" placeholder="Digite sua resposta " autofocus name="corpo"  ></textarea>
                    <input type="hidden" name="pergunta" value='<%=pergunta.id%>'>
                
                    <button type="submit" class="btn btn-light resposta">Resposta</button>
                </form>
                <hr>
                <h3>Respostas:</h3>
                
              
                <% respostas.forEach(resposta =>{ %>
                    <div class="card">
                        <div class="card-body">
                            <p><%=resposta.corpo%></p>
                        </div>
                    </div>
                   
                   <%  }) %>
</body>             

<%- include('./partiels/footer.ejs'); %>
